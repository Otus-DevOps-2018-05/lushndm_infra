{
    "variables":
        {
            "var_type": "googlecompute",
            "var_image_name": "reddit-base-{{timestamp}}",
            "var_image_family": "reddit-base",
            "var_zone": "europe-west1-b",
            "var_ssh_username": "appuser"
        },
    "builders": [
        {
            "type": "{{user `var_type`}}",
            "project_id": "{{user `proj_id`}}",
            "image_name": "{{user `var_image_name`}}",
            "image_family": "{{user `var_image_family`}}",
            "source_image_family": "{{user `source_image_family`}}",
            "zone": "{{user `var_zone`}}",
            "ssh_username": "{{user `var_ssh_username`}}",
            "machine_type": "{{user `machine_type`}}",
            "image_description": "reddit-base-image",
            "disk_size": "10",
            "disk_type": "pd-standard",
            "network": "default",
            "tags": "puma-server"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        }
    ]
}
